

<%- include ('./partials/nav') %>
<!-- Hero Section Carousel -->
<section id="hero-carousel" class="carousel slide vh-100" data-bs-ride="carousel">
  <div class="carousel-inner h-100">
    <!-- Slide 1 -->
    <div class="carousel-item active h-100">
      <div class="h-100 d-flex align-items-center justify-content-center bg-dark text-white" style="background-image: url('/img/cq.jpg'); background-size: cover; background-position: center;">
        <div class="text-center">
          <h1 class="display-4 fw-bold">Welcome Carnival Queen Pageant</h1>
          <p class="lead"> where we celebrate women's empowerment, <br>  and community development.</p>
          <a href="/abouts" class="btn btn-success btn-lg">Learn More</a>
        </div>
      </div>
    </div>
    <!-- Slide 2 -->

    <div class="carousel-item h-100">
      <div class="h-100 d-flex align-items-center justify-content-center bg-dark text-white" style="background-image: url('/img/3.jpg'); background-size: cover; background-position: center;">
        <div class="text-center">
          <h1 class="display-4 fw-bold">Welcome Carnival Queen Pageant</h1>
          <p class="lead"> where we celebrate  cultural diversity</p>
          <a href="/abouts" class="btn btn-success btn-lg">Learn More</a>
        </div>
      </div>
    </div>

  </div>

  <!-- Carousel Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#hero-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#hero-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</section>

<main class="container">
  <!-- About Section -->
<section id="about" class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <img src="/img/qq.jpg" class="img-fluid rounded" alt="About Image">
      </div>
      <div class="col-md-6 mt-2">
        <h2>Our Mission</h2>
        <p class="lead"> We are committed to providing a free and fair platform where contestants can showcase their talents, intelligence, and character while honoring their cultural heritage and promoting women's capacity development. Our pageant welcomes women from diverse backgrounds and abilities, making us a reflection of the world's beauty in diversity.</p>
      </div>
    </div>
  </div>
</section>

<!-- Vision Section -->
<section id="vision" class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-md-2">
        <img src="/img/cq.jpg" class="img-fluid rounded" alt="Vision Image">
      </div>
      <div class="col-md-6 order-md-1 mt-2">
        <h2>Our Vision</h2>
        <p class="lead">The Carnival Queen Pageant aims to be a leading platform for women's empowerment, cultural exchange, and community development. We strive to create an extraordinary experience that inspires and uplifts everyone involved, breaking conventions and transforming the ordinary into extraordinary through the concept of “Unusualization”.</p>
      </div>
    </div>
  </div>
</section>

<!-- Contestants Section -->
<section id="contestants" class="py-5">
  <div class="container text-center">
    <h2 class="mb-5">Our Contestants</h2>
    <div class="row">
      <% contestants.forEach((data) => { %>
      <div class="col-md-4 mb-4">
        <a href="/contestants">
          <img  src="<%= data.photo_url %>"  class="img-fluid rounded mb-2" alt="Contestant 1">
        </a>
        <h5><%= data.vote_count %> votes</h5>
      </div>
      <% }) %>
    </div>
  </div>
</section>
</main>

<%- include('./partials/footer') %>