


<%- include ('./partials/nav') %>

<!-- Hero Section -->
<section id="hero" class="hero text-center">
  <div class="container">

    <div class="mt-5"></div>
    <br>
    <br>
    <!-- Carousel starts -->
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
      
      <!-- Carousel Items -->
      <div class="carousel-inner">
        <!-- First Item -->
        <div class="carousel-item active">
          <div class="row align-items-center">
            <!-- Text Section (col-8 on larger screens, col-12 on mobile) -->
            <div class="col-lg-8 col-md-8 col-sm-12 text-start">
              <h1 data-aos="fade-up" data-aos-delay="100">Welcome To The Carnival Queen Pageant</h1>
              <p data-aos="fade-up" data-aos-delay="200">
                where we celebrate  women's empowerment, cultural diversity  and community development.
              </p>
            </div>
            <!-- Image Section (col-4 on larger screens, col-12 on mobile) -->
            <div class="col-lg-4 col-md-4 col-sm-12" data-aos="fade-up" data-aos-delay="300">
             <div class="rounded-image">
              <img src="/img/mm.jpg" class="img-fluid " alt="Hero Image">
             </div>
            </div>
          </div>
        </div>

        <!-- Second Item -->
        <div class="carousel-item">
          <div class="row align-items-center">
            <!-- Text Section (col-8 on larger screens, col-12 on mobile) -->
            <div class="col-lg-8 col-md-8 col-sm-12 text-start">
              <h1>Welcome To The Carnival Queen Pageant</h1>
              <p>
                Discover new ways to enhance your business and reach your goals faster.
              </p>
            </div>
            <!-- Image Section (col-4 on larger screens, col-12 on mobile) -->
            <div class="col-lg-4 col-md-4 col-sm-12">
              <div class="rounded-image">
                <img src="/img/mm-2.jpg" class="img-fluid " alt="Second Hero Image">

              </div>
            </div>
          </div>
        </div>
        <!-- Add more carousel items as needed -->
      </div>

      <!-- Carousel Controls positioned at the bottom -->
      <div class="carousel-controls text-center mt-4">
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <!-- Carousel ends -->
  </div>
</section>

<style>
  /* Custom CSS to reposition the carousel controls */
  .carousel-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    bottom: 0;
    margin-top: 30px;
  }

  .carousel-control-prev, .carousel-control-next {
    border-radius: 50%;
    padding: 10px;
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .carousel-control-prev-icon, .carousel-control-next-icon {
    filter: invert(1); /* Makes the icons visible on a colored background */
  }

  .rounded-image{
    border-radius: 50%;
    height: 450px;
    
  }
</style>


<br>
<br>

<main class="container">
  <!-- About Section -->
      <!-- Section Title -->
      <div class="container section-title mt-2" data-aos="fade-up" data-aos-delay="100">
        <h2>About us</h2>
        <p>Get To know us </p>
      </div><!-- End Section Title -->


<section id="about" class="py-5 bg-light" >

  

  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row align-items-center">
      <div class="col-md-6">
        <img src="/img/qq.jpg" class="img-fluid rounded shadow" alt="About Image">
      </div>
      <div class="col-md-6 mt-2">
        <h2 class="text-heading">Our Mission</h2>
        <p class="lead"> We are committed to providing a free and fair platform where contestants can showcase their talents, intelligence, and character while honoring their cultural heritage and promoting women's capacity development. Our pageant welcomes women from diverse backgrounds and abilities, making us a reflection of the world's beauty in diversity.</p>
      </div>
    </div>
  </div>
</section>

<!-- Vision Section -->
<section id="vision" class="py-5 bg-light" data-aos="fade-up" data-aos-delay="100">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-md-2">
        <img src="/img/mm-2.JPG" class="img-fluid rounded shadow" alt="Vision Image">
      </div>
      <div class="col-md-6 order-md-1 mt-2">
        <h2 class="text-heading">Our Vision</h2>
        <p class="lead">The Carnival Queen Pageant aims to be a leading platform for women's empowerment, cultural exchange, and community development. We strive to create an extraordinary experience that inspires and uplifts everyone involved, breaking conventions and transforming the ordinary into extraordinary through the concept of “Unusualization”.</p>
      </div>
    </div>
  </div>
</section>

<!-- Contestants Section -->
<section id="contestants" class="py-5">
  <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
    <h2 class="mb-5">Our Contestants</h2>
    <div class="row">
      <% contestants.forEach((data) => { %>
      <div class="col-md-4 mb-4 border-1">
        <a href="/contestants">
          <img  src="<%= data.photo_url %>"  class="img-fluid rounded mb-2" alt="Contestant 1">
        </a>


              <% if (data.status === "evicted") { %>
                <p class="mt-2 btn btn-danger w-100">
                  <i class="bi bi-exclamation-triangle-fill"></i> Evicted
              </p>
              
            <% } else { %>  
                <p class="m-0 primary-color"><%= data.fname %> <%= data.lname %> </p>
                <h5><%= data.vote_count %> votes</h5>
              <% } %>

   
      </div>
      <% }) %>
    </div>
  </div>
</section>
</main>

<%- include('./partials/footer') %>