<!-- Contestants Section -->
<section id="contestants" class="py-5">

      <!-- Section Title -->
      <div class="container section-title mt-2" data-aos="fade-up" data-aos-delay="100">
        <h2>contestants</h2>

      </div><!-- End Section Title -->


  <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
    <div class="row">
      <% contestants.forEach((data) => { %>
      <div class="col-md-4 mb-4 border-1">
        <div class="" data-aos="fade-up" data-aos-delay="100">
          <div class="card-body">
            <a href="/contestants">
              <img  src="<%= data.photo_url %>"  class="img-fluid rounded mb-2" alt="Contestant 1">
            </a>
    
    
                  <% if (data.status === "evicted") { %>
                    <p class="mt-2 btn btn-danger w-100">
                      <i class="bi bi-exclamation-triangle-fill"></i> Evicted
                  </p>
                  
                <% } else { %>  
                    <p class="m-0 primary-color"><%= data.fname %> <%= data.lname %> </p>
                    <h5><%= data.vote_count %> votes</h5>
                  <% } %>
    
          </div>
        </div>
   
   
      </div>
      <% }) %>
    </div>
  </div>
</section>

 
