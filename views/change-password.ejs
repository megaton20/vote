<div class="container">
    <p class="text-center"> <i class="bi bi-bell"></i> Enter new passowrd and resume voting</p> 

    <div class="card">
        <div class="card-body">
        <%- include('./partials/messages') %>
            <h2 class="text-center">change password</h2>
            <form action="/auth/reset-password/<%=token%>" method="post">
                <div class="mb-3">
                    <input class="form-control form-ctrl" type="password" name="password" id="password" placeholder="Enter new password" required>
                </div>
                <div class="mb-3">
                    <input class="form-control form-ctrl" type="password" name="confirm" id="confirm" placeholder="confirm your password" required>
                </div>

                <button class="btn btn-primary w-100" type="submit">Reset password</button>
            </form>

            <p> <a href="/login">Login account</a></p>

        </div>
    </div>
</div>



