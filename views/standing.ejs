<div class="container">
              <div class="table-responsive">
                <table class="table table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Total Vote</th>
                          <th>Total Points</th>
                          <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% standings.forEach(function(data, index) { %>
                            <tr data-aos="fade-up" data-aos-delay="100">
                                <td><%= index + 1 %></td>
                                <td><%= data['fname'] %> <%= data['lname'] %></td>
                               <!-- Votes -->
                            <td class="<%= data['vote_count'] < 30 ? 'text-danger' : data['vote_count'] < 50 ? 'text-warning' : 'text-success' %>">
                                <%= data['vote_count'] %>
                            </td>

                            <!-- Points -->
                            <td class="<%= data['points'] < 200 ? 'text-danger' : data['points'] < 500 ? 'text-warning' : 'text-success' %>">
                                <%= data['points'] %>
                            </td>
                                <td class="<%= data['status'] === 'eviction' ? 'text-danger' : 'text-success' %>">
                                    <%= data['status'] === 'eviction' ? 'Evicted' : 'Active' %>
                                </td>
                            </tr> 
                        <% }) %>
                    </tbody>
                  </table>
              </div>


</div>

